<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="#fff"
        android:id="@+id/start_rel"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/heading_rel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/Notif_rel"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:background="#ffeca7"
            android:padding="10dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Notif_rel"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_above="@+id/reset_app"
            android:layout_marginBottom="10dp"
            android:background="#fac3d1"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notifications"
                android:textColor="#000"
                android:textSize="15dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="35dp"
                android:gravity="center"
                android:id="@+id/radio"
                >

                <RadioButton android:id="@+id/allowNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow"
                    android:buttonTint="#fff"
                    />
                <RadioButton android:id="@+id/dontAllowNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't allow"
                    android:buttonTint="#fff"/>
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/reset_app"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/vibration_rel"
            android:layout_marginBottom="10dp"
            android:background="#c7ebfa"
            android:buttonTint="#33bbff"
            android:text="Reset the application"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            />

        <RelativeLayout
            android:id="@+id/bottom_rel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#ffeca7"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/action_ok"
                android:layout_width="100sp"
                android:minWidth="100sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:text="OK"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/action_cancel"
                android:layout_width="100sp"
                android:minWidth="100sp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="Cancel"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>